        elif decision_usuario == 2:
            
            clave_buscar = int(input("Ingresa la clave de la compra que realizaste: "))
            
            
            if clave_buscar in ventas.keys():
                print("Los datos de la venta son: [NOMBRE ARTICULO / NUMERO DE ARTICULOS/FECHA_COMPRA]")
                print(ventas[clave_buscar])
                print("")
                print("Regresaremos al Menu Principal")
                print("")
            else:
                print("Esa clave no esta registrada")
        elif decision_usuario == 3:
            try:
                with sqlite3.connect("Tabla_cosmeteria.db") as conn:
                    c = conn.cursor()
                    fecha_actual = datetime.datetime.combine(datetime.date.today(), datetime.datetime.min.time())
                    c.execute("CREATE TABLE IF NOT EXISTS registro_ventas (folio INTEGER PRIMARY KEY, producto TEXT NOT NULL, Descripcion TEXT NOT NULL, Cantidad de productos INTEGER, Precio de venta INTEGER, Costo final INTEGER,Fecha DATE);")
                    print("Tabla creada exitosamente")
            except Error as e:
                print (e)
            except:
                print(f"Se produjo el siguiente error: {sys.exc_info()[0]}")
                
        elif decision_usuario == 4:
            print("Buen dia, vuelva pronto")
            break
else:
    print("Buen dia, vuelva pronto")
